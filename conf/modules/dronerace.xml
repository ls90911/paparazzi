<!DOCTYPE module SYSTEM "module.dtd">

<module name="dronerace" dir="ctrl/dronerace">
  <doc>
    <description>Autonomous Drone Race</description>
  </doc>

  <settings>
    <dl_settings NAME="temp">
    <dl_settings name="pid_control">
      <dl_setting min="0.0" max="5.0" step="0.1" var="k_p_vel_x" shortname="k_p_vel_x"/>
      <dl_setting min="0.0" max="5.0" step="0.1" var="k_d_vel_x" shortname="k_d_vel_x"/>
      <dl_setting min="0.0" max="5.0" step="0.1" var="k_p_vel_y" shortname="k_p_vel_y"/>
      <dl_setting min="0.0" max="5.0" step="0.1" var="k_d_vel_y" shortname="k_d_vel_y"/>
      <dl_setting min="0.0" max="5.0" step="0.1" var="k_p_pos_x" shortname="k_p_pos_x"/>
      <dl_setting min="0.0" max="5.0" step="0.1" var="k_d_pos_x" shortname="k_d_pos_x"/>
      <dl_setting min="0.0" max="5.0" step="0.1" var="k_p_pos_y" shortname="k_p_pos_y"/>
      <dl_setting min="0.0" max="5.0" step="0.1" var="k_d_pos_y" shortname="k_d_pos_y"/>
    </dl_settings>
    </dl_settings>
   </settings>

  <header>
    <file name="dronerace.h"/>
    <file name="control.h"/>
  </header>
  <init fun="dronerace_init()"/>
  <periodic fun="dronerace_periodic()"/>
  <periodic fun="control_run()"/>
  <makefile target="ap|nps">
    <file name="pprz_syscalls.c" dir="."/>
    <file name="dronerace.c"/>
    <file name="flightplan.c"/>
    <file name="filter.c"/>
    <file name="control.c"/>
    <file name="ransac.c"/>
    <file name="fifo.c"/>
    <file name="RANSAC.c" dir="math"/>
    <file name="pprz_matrix_decomp_float.c" dir="math"/>
  </makefile>
</module>
